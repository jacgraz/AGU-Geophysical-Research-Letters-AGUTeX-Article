	journal = {Atmospheric Measurement Techniques},
	author = {Besic, Nikola and Gehring, Josu√© and Praz, Christophe and Figueras i Ventura, Jordi and Grazioli, Jacopo and Gabella, Marco and Germann, Urs and Berne, Alexis},
