	journal = {The Cryosphere},
	author = {Agosta, C√©cile and Amory, Charles and Kittel, Christoph and Orsi, Anais and Favier, Vincent and Gall√©e, Hubert and van den Broeke, Michiel R. and Lenaerts, Jan T. M. and van Wessem, Jan Melchior and van de Berg, Willem Jan and Fettweis, Xavier},
