	journal = {Journal of Geophysical Research: Atmospheres},
	author = {Gehring, Josu√© and Vignon, Etienne and Billault-Roux, Anne-Claire and Ferrone, Alfonso and Protat, Alain and Alexander, Simon P. and Berne, Alexis},
