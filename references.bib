	year = {2020},
	keywords = {bright band, melting-layer},
}

@article{Baker_JAMC_2006a,
	title = {Improvement in {Determination} of {Ice} {Water} {Content} from {Two}-{Dimensional} {Particle} {Imagery}. {Part} {I}: {Image}-to-{Mass} {Relationships}},
	volume = {45},
	issn = {1558-8432, 1558-8424},
	shorttitle = {Improvement in {Determination} of {Ice} {Water} {Content} from {Two}-{Dimensional} {Particle} {Imagery}. {Part} {I}},
