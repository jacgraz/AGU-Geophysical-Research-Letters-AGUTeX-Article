@article{Mroz_AMT_2021,
	title = {Linking rain into ice microphysics across the melting layer in stratiform rain: a closure study},
	volume = {14},
	issn = {1867-8548},
	shorttitle = {Linking rain into ice microphysics across the melting layer in stratiform rain},
	url = {https://amt.copernicus.org/articles/14/511/2021/},
	doi = {10.5194/amt-14-511-2021},
	abstract = {Abstract. This study investigates the link between rain and ice microphysics across the melting layer in stratiform rain systems using measurements from vertically pointing multi-frequency Doppler radars.
A novel methodology to examine the variability of the precipitation rate and the mass-weighted melted diameter (Dm) across the melting region is proposed and applied to a 6‚Äâh long case study, observed during the TRIPEx-pol field campaign at the J√ºlich Observatory for Cloud Evolution Core Facility and covering a gamut of ice microphysical processes.
The methodology is based on an optimal estimation (OE) retrieval of particle size distributions (PSDs) and dynamics (turbulence and vertical motions) from observed multi-frequency radar Doppler spectra applied both above and below the melting layer.
